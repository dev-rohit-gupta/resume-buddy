{
  "name": "@resume-buddy/server",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run copy:bootstrap-js && tsx watch src/index.ts",
    "build": "npm run build:css && npm run copy:bootstrap-js && npx tsc",
    "start": "node dist/index.js",
    "build:css": "npm run build:tailwind && npm run build:bootstrap",
    "build:tailwind": "tailwindcss -i ./src/static/css/tailwind.input.css -o ./src/static/css/tailwind.output.css --minify",
    "build:bootstrap": "sass --load-path=../../node_modules src/static/css/bootstrap.custom.scss src/static/css/bootstrap.output.css --style compressed",
    "copy:bootstrap-js": "cp ../../node_modules/bootstrap/dist/js/bootstrap.bundle.min.js src/static/js/bootstrap.bundle.min.js",
    "watch:css": "npm run watch:tailwind & npm run watch:bootstrap",
    "watch:tailwind": "tailwindcss -i ./src/static/css/tailwind.input.css -o ./src/static/css/tailwind.output.css --watch",
    "watch:bootstrap": "sass --load-path=../../node_modules src/static/css/bootstrap.custom.scss src/static/css/bootstrap.output.css --watch --style compressed"
  },
  "dependencies": {
    "@google/generative-ai": "^0.15.0",
    "@resume-buddy/ai-engine": "^1.0.0",
    "@resume-buddy/schemas": "^1.0.0",
    "@resume-buddy/utils": "^1.0.0",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jose": "^6.1.3",
    "mongoose": "^8.5.0",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.14.0",
    "autoprefixer": "^10.4.16",
    "bootstrap": "^5.3.8",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "sass": "^1.69.5",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.15.0",
    "typescript": "^5.5.0"
  }
}
