{
  "name": "resume-buddy",
  "private": true,
  "version": "1.0.0",
  "description": "AI-powered career decision engine that helps students and freshers evaluate jobs and internships before applying.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-rohit-gupta/resume-buddy.git"
  },
  "bugs": {
    "url": "https://github.com/dev-rohit-gupta/resume-buddy/issues"
  },
  "scripts": {
    "dev": "npm run dev --workspace=@resume-buddy/server",
    "dev:css": "npm run watch:css --workspace=@resume-buddy/server",
    "build": "npm run build:css && npx turbo run build",
    "build:css": "npm run build:css --workspace=@resume-buddy/server",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "turbo": "^2.7.4",
    "typescript": "^5.5.0"
  },
  "packageManager": "npm@10.9.2",
  "homepage": "https://github.com/dev-rohit-gupta/resume-buddy#readme"
}
