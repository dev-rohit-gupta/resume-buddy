{
  "$schema": "./node_modules/turbo/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "build:css"],
      "outputs": ["dist/**"]
    },
    "build:css": {
      "cache": true,
      "outputs": [
        "apps/server/src/static/css/tailwind.output.css",
        "apps/server/src/static/css/bootstrap.output.css",
        "apps/server/src/static/js/bootstrap.bundle.min.js"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
